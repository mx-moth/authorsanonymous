root = true

[*]
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_style = space
indent_size = 4

[*.py]
indent_style = space
indent_size = 4

[*.yml,*.yaml]
indent_style = space
indent_size = 2

[*.md,*.rst]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[package.json]
indent_style = space
indent_size = 2
