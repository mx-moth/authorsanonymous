{
    "name": "authorsanonymous-frontend",
    "version": "1.0.0",
    "description": "Frontend build and watcher setup for authorsanonymous.me",
    "license": "BSD-3-Clause",
    "author": "Tim Heap",
    "repository": {
        "type": "git",
        "url": "git@github.com:timheap/authorsanonymous.git"
    },
    "scripts": {
        "clean": "rimraf $npm_package_config_static/*",
        "makedirs": "mkdir -p $npm_package_config_static/js $npm_package_config_static/css $npm_package_config_static/images $npm_package_config_static/fonts",
        "prebuild": "npm-run-all clean makedirs",
        "build": "npm-run-all --parallel build:*",
        "build:copy": "copyfiles -u 2 \"$npm_package_config_design/fonts/*.{xml,json,ico,woff,woff2}\" $npm_package_config_static/",
        "build:css": "npm-run-all build:css:compile build:css:postcss",
        "build:css:compile": "node-sass --include-path node_modules $npm_package_config_design/scss --output $npm_package_config_static/css",
        "build:css:postcss": "postcss $npm_package_config_static/css/*.css --dir $npm_package_config_static/css/",
        "build:images": "imagemin \"$npm_package_config_design/images/**/*.{jpg,png,svg}\" --out-dir=$npm_package_config_static/images",
        "build:js": "browserify $npm_package_config_design/js/main.js $npm_package_config_browserifytransform | uglifyjs -m > $npm_package_config_static/js/main.js",
        "prewatch": "npm-run-all makedirs",
        "watch": "npm-run-all --parallel watch:*",
        "watch:copy": "onchange -iw $npm_package_config_design/fonts/** -- npm-run-all build:copy",
        "watch:css": "onchange -iw $npm_package_config_design/scss/** -- npm-run-all build:css",
        "watch:images": "onchange -iw $npm_package_config_design/images/** -- npm-run-all build:images",
        "watch:js": "watchify --verbose --debug $npm_package_config_design/js/main.js $npm_package_config_watchifytransform -o $npm_package_config_static/js/main.js",
        "echo": "echo $npm_package_config_design/config/postcss-config.js"
    },
    "config": {
        "browserifytransform": " -t [ eslintify --quiet-ignored true ] -t [ babelify ] ",
        "watchifytransform": " -t [ eslintify --quiet-ignored true ] -t [ babelify ] ",
        "static": "static",
        "design": "design"
    },
    "babel": {
        "plugins": [
            [
                "module-resolver",
                {
                    "root": [
                        "."
                    ]
                }
            ]
        ],
        "presets": [
            [
                "env",
                {
                    "targets": {
                        "browsers": [
                            "last 3 versions"
                        ]
                    }
                }
            ]
        ]
    },
    "eslintConfig": {
        "env": {
            "es6": true,
            "browser": true,
            "node": true
        },
        "extends": "eslint:recommended",
        "globals": {
            "require": true,
            "jQuery": true,
            "$": true
        },
        "parser": "babel-eslint",
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module",
            "ecmaFeatures": {
                "modules": true,
                "jsx": true
            }
        },
        "rules": {
            "indent": ["error", "tab"],
            "comma-style": [
                2,
                "last"
            ],
            "no-unused-vars": 0,
            "no-undef": 0,
            "func-names": 0,
            "no-labels": 2,
            "keyword-spacing": [
                2,
                {
                    "before": true,
                    "after": true
                }
            ],
            "no-empty-label": 0,
            "no-console": 0,
            "semi": 1,
            "max-len": 0,
            "newline-per-chained-call": 0,
            "no-confusing-arrow": 0,
            "no-use-before-define": 0,
            "prefer-template": 2,
            "require-yield": 0
        }
    },
    "dependencies": {
        "autoprefixer": "^8.0.0",
        "babel-cli": "6.24.1",
        "babel-core": "6.24.1",
        "babel-eslint": "^8.0.0",
        "babel-loader": "7.1.0",
        "babel-minify": "^0.3.0",
        "babel-plugin-dynamic-import-node": "1.0.2",
        "babel-plugin-module-resolver": "^3.0.0",
        "babel-plugin-transform-es2015-modules-commonjs": "6.24.1",
        "babel-plugin-transform-runtime": "^6.23.0",
        "babel-preset-env": "^1.6.0",
        "babelify": "^8.0.0",
        "browser-sync": "^2.18.13",
        "browserify": "^16.1.0",
        "browserify-hmr": "^0.3.6",
        "onchange": "^3.3.0",
        "compression": "1.6.2",
        "copyfiles": "^1.2.0",
        "css-loader": "0.28.4",
        "cssnano": "^3.10.0",
        "eslint": "^4.5.0",
        "eslint-import-resolver-webpack": "0.8.3",
        "eslint-plugin-import": "2.7.0",
        "eslintify": "^3.1.0",
        "fetch-jsonp": "^1.1.3",
        "imagemin-cli": "^3.0.0",
        "jquery": "~3.3.1",
        "lint-staged": "3.5.1",
        "modernizr": "^3.5.0",
        "node-sass": "^4.13.1",
        "npm-run-all": "^4.1.1",
        "postcss": "^6.0.10",
        "postcss-cli": "^5.0.0",
        "postcss-pxtorem": "^4.0.1",
        "rimraf": "^2.6.1",
        "sass-lint": "^1.11.1",
        "semver": "^5.4.1",
        "shelljs": "0.7.7",
        "source-map-explorer": "^1.5.0",
        "uglify-js": "^3.3.12",
        "uglifyify": "^4.0.5",
        "url": "^0.11.0",
        "watchify": "^3.9.0",
        "webpack": "^3.11.0",
        "webfonts-generator": "^0.4.0",
        "whatwg-fetch": "2.0.3",
        "winston": "^2.4.0"
    },
    "engines": {
        "node": ">=8.6.0"
    },
    "aliasify": {
    },
    "lint-staged": {
        "*.js": "lint:eslint"
    },
    "sasslintConfig": "$npm_package_config_design/config/sass-lint.yml",
    "postcss": {
        "plugins": {
            "autoprefixer": {
                "browsers": [
                    "last 3 versions",
                    "ie >= 11"
                ]
            },
            "postcss-pxtorem": {
                "rootValue": "18",
                "replace": false,
                "propList": ["font", "font-size", "line-height", "letter-spacing"],
                "selectorBlackList": [
                    ":before",
                    ":after",
                    "::before",
                    "::after"
                ]
            }
        }
    }
}
